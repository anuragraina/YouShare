<%- include('../partials/header') %>

<div class="container">
    <div class="row justify-content-center align-items-center">
        <h1 style="text-align: center;">Add a new comment to <%= food.name %> </h1>
    </div>
    
    <div class="row justify-content-center align-items-center">
        <div style="width: 30%; margin:20px,auto;">
            <form action="/foods/<%= food.id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <p><a href="/foods/<%= food.id %>">Go Back</a></p>
        </div> 
    </div>          
</div>


<%- include('../partials/footer') %>