<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Categories</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%= food.image %>" alt="Card image cap">
                <div class="card-body">
                    <h3 class="card-title"><%= food.name %></h3>
                    <p class="card-text"><%= food.description %></p>
                </div>
            </div>
            <div class="card bg-light">
                <div class="card-body">
                    <div class="row align-items-start">
                        <div class="col-md-12">
                            <h3 class="card-title float-left">Comments</h3>
                            <a href="/foods/<%= food._id %>/comments/new" class="btn btn-success btn-sm float-right">Add a new comment</a>
                        </div>                        
                    </div>
                    <hr>
                    <% food.comments.forEach(comment => { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong class="float-left"><%= comment.author %></strong>
                                <span class="float-right">10 days ago</span>
                                <br>
                                <p class="float-none"><%= comment.text %></p>
                            </div>
                        </div>
                    <%  });  %>    
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>