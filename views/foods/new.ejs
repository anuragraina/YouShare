<%- include('../partials/header') %>

<div class="container">
    <div class="row justify-content-center align-items-center">
        <h1 style="text-align: center;">Add a new Item</h1>
    </div>
    
    <div class="row justify-content-center align-items-center">
        <div style="width: 30%; margin:20px,auto;">
            <form action="/foods" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="food[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="food[image]" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="food[description]" placeholder="Description">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <p><a href="/foods">Go Back</a></p>
        </div> 
    </div>          
</div>


<%- include('../partials/footer') %>