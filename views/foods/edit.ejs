<%- include('../partials/header') %>

<div class="container">
    <div class="row justify-content-center align-items-center">
        <h1>Edit <%= food.name %> </h1>
    </div>
    
    <div class="row justify-content-center align-items-center">
        <div id="form">
            <form action="/foods/<%= food._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="food[name]" value="<%= food.name %> ">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="food[image]" value="<%= food.image %> ">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="food[description]" value="<%= food.description %> "></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <p><a href="/foods/<%= food._id %>">Go Back</a></p>
        </div> 
    </div>          
</div>


<%- include('../partials/footer') %>